@model my_resturant.Models.Menulist

<h2>Edit Menu Item</h2>

<form asp-action="Edit" method="post" style="max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 4px; background-color: #f9f9f9;">
    <input type="hidden" asp-for="Id" />
    <div style="margin-bottom: 15px;">
        <label asp-for="Name" style="display: block; font-weight: bold; margin-bottom: 5px;"></label>
        <input asp-for="Name" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="Price" style="display: block; font-weight: bold; margin-bottom: 5px;"></label>
        <input asp-for="Price" type="number" step="0.01" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="Description" style="display: block; font-weight: bold; margin-bottom: 5px;"></label>
        <input asp-for="Description" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <button type="submit" style="padding: 10px 15px; text-decoration: none; color: white; background-color: #007bff; border: none; border-radius: 4px; cursor: pointer;">Save Changes</button>
</form>
