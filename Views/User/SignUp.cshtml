@model my_resturant.Models.User

<h2>Sign Up</h2>

<form asp-action="SignUp" method="post" style="max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 4px; background-color: #f9f9f9;">
    <div style="margin-bottom: 15px;">
        <label asp-for="username" style="display: block; font-weight: bold; margin-bottom: 5px;">Username</label>
        <input asp-for="username" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="Password" style="display: block; font-weight: bold; margin-bottom: 5px;">Password</label>
        <input asp-for="Password" type="password" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <div style="margin-bottom: 15px;">
        <label asp-for="Email" style="display: block; font-weight: bold; margin-bottom: 5px;">Email</label>
        <input asp-for="Email" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" />
    </div>
    <button type="submit" style="padding: 10px 15px; text-decoration: none; color: white; background-color: #007bff; border: none; border-radius: 4px; cursor: pointer;">Sign Up</button>
</form>
@if (ViewBag.Message != null)
{
    <div class="text-danger" style="color: red; margin-top: 15px;">
        @ViewBag.Message
    </div>
}

