@model my_resturant.Models.User

<h2>Change Password</h2>

<form asp-action="ChangePassword" asp-controller="User" method="post" style="max-width: 600px; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 4px; background-color: #f9f9f9;">
    <div style="margin-bottom: 15px;">
        <label for="currentpassword" style="display: block; font-weight: bold; margin-bottom: 5px;">Current Password</label>
        <input name="currentpassword" type="password" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; background-color: #fff;" />
    </div>

    <div style="margin-bottom: 15px;">
        <label for="newpassword" style="display: block; font-weight: bold; margin-bottom: 5px;">New Password</label>
        <input name="newpassword" type="password" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px; background-color: #fff;" />
    </div>

    <button type="submit" style="padding: 10px 20px; border: none; border-radius: 4px; background-color: #007bff; color: white; cursor: pointer;">Change Password</button>
</form>

@if (ViewData.ModelState[""] != null)
{
    <div class="text-danger" style="color: red; margin-top: 15px;">
        @ViewData.ModelState[""].Errors.First().ErrorMessage
    </div>
}
